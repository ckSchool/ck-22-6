#:kivy 1.0.4


<ScreenMain>:
    dd_btn: btn_ddID
    BoxLayout
        orientation:'vertical'
        BoxLayout:
            orientation:'horizontal'
            size_hint:(1, None)
            height: 42
            Button:
                id:btn_ddID
                text:'Classes'
                on_release: root.drop_down(btn_ddID)

            Widget:
        Button:
            id:student_image_btn
            size_hint: 1, 1
            background_normal: ''
        Label:
            id:studentname_label
            text:btn_ddID.text
        ScrollView:
            padding:5
            size_hint: (1, 1)
            GridLayout:
                id:messages_grid
                padding:5
                spacing:5
                row_default_height:42
                row_force_default:True
                cols:1
        Widget:
            size_hint: 1, 1


<LoginPopup>:
    size_hint: 1, .5
    auto_dismiss: False
    title: 'Welcome'

    GridLayout:
        size_hint:(1,1)
        cols:2
        spacing:1
        LabelC:
            bcolor: .7, .3, .1, 1
            font_size:24
            text:'Email name'
            valign:'middle'
        TextInput:
            id:email_input_p
            font_size:24
            padding:5,(self.height-self.line_height)/2,0,0

            text:'q'
        LabelC:
            font_size:24
            valign:'middle'
            bcolor: .7, .3, .1, 1
            text:'Password'
        TextInput:
            id:password_input_p
            padding:5,(self.height-self.line_height)/2,0,0
            font_size:24
            text:'w'
        Label:
        Button:
            text:'Enter'
            
            on_press: root.login()


<CustomPopup>:
    size_hint: 1, .5
    auto_dismiss: False
    title: 'Warning!'
    Button:
        halign:'center'
        text: 'Wrong Password, Please Correct the password!\n\nClick to dismiss'
        on_press: root.dismiss()
